{
    "compilerOptions": {
        "module": "es2015",
        "noImplicitAny": true,
        "target": "es3",
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "built",
        "rootDir": "src",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true
    }
}